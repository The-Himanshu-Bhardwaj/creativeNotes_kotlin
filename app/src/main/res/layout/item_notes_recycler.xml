<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="15dp"
            android:elevation="10dp"
            android:layout_margin="5dp"

            android:backgroundTint="@color/fade_grey">

            <View
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/priorityDOT"
                android:layout_gravity="right"
                android:layout_margin="7dp"
                android:background="@drawable/red_icon" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">


                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title of Note"
                    android:id="@+id/noteTitle"
                    android:fontFamily="@font/opensans_bold"
                    android:paddingLeft="9dp"
                    android:paddingTop="9dp"
                    android:textSize="20sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title of Note thi sis the adhfkadhf ahfajhfa fhaifha fhaifhafhaifha fdhfiahfjaf asdfhaihf"
                    android:paddingLeft="9dp"
                    android:id="@+id/noteSubtitle"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/opensans_light"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Title of Note thi sis the adhfkadhf ahfajhfa fhaifha fhaifhafhaifha fdhfiahfjaf asdfhaihf"
                    android:paddingLeft="9dp"
                    android:id="@+id/noteDescription"
                    android:paddingTop="5dp"
                    android:fontFamily="@font/opensans_light"
                    android:textSize="16sp" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="9dp"
                    android:text="13 March,  2022"

                    android:paddingRight="15dp"
                    android:paddingTop="5dp"
                    android:id="@+id/dateLabel"
                    android:paddingBottom="5dp"
                    android:fontFamily="@font/opensans_bold"
                    android:textSize="18sp" />


            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>
</layout>